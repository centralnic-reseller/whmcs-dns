{
  "name": "centralnick/whmcs-dns",
  "description": "CentralNic DNS Addon Module for WHMCS",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Sebastian Vassiliou",
      "email": "svassiliou@hexonet.net"
    }
  ],
  "require-dev": {
    "phpstan/phpstan": "^0.12.56"
  },
  "config": {
    "vendor-dir": "addons/cnicdns/vendor"
  },
  "autoload": {
    "psr-4": {
      "CNIC\\WHMCS\\DNS\\": "addons/cnicdns/lib/"
    }
  },
  "scripts": {
    "phpstan": [
      "rm -rf addons/cnicdns/vendor",
      "@composer update",
      "phpstan analyze -c phpstan.neon"
    ],
    "test": [
      "@composer update",
      "phpunit"
    ]
  },
  "require": {
    "ext-openssl": "*",
    "ext-json": "*"
  }
}